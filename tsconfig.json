{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "module": "nodenext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@data-layer": ["src/data-layer/index.tsx"],
      "@data-layer/*": ["src/data-layer/*"],
      "@navigation": ["src/navigation/index.tsx"],
      "@navigation/*": ["src/navigation/*"],
      "@ui": ["src/ui/index.tsx"],
      "@ui/*": ["src/ui/*"],
      "@utils": ["src/utils/index.tsx"],
      "@utils/*": ["src/utils/*"],
      "assets/*": ["src/types/assets.d.ts"]
    }
  },
  "include": ["src/types"],
  "exclude": ["node_modules"],
  "extends": "@react-native/typescript-config/tsconfig.json"
}
